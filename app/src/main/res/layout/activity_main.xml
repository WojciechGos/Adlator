<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal">

    <fragment
        android:name="com.example.wojciech.fraction.FragmentConstant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        tools:layout="@layout/fragment_constant" />


    <LinearLayout
        style="@style/styleLinearLayout">

        <fragment
            android:id="@+id/id_fragment_numerator"
            android:name="com.example.wojciech.fraction.FragmentNumerator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_numerator" />

        <fragment
            android:id="@+id/id_fragment_denominator"
            android:name="com.example.wojciech.fraction.FragmentDenominator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_denominator" />

    </LinearLayout>





</LinearLayout>